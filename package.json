{
  "name": "vscode-api-viewer",
  "displayName": "vscode-api-viewer",
  "description": "An VSCode extension for view api docs from Yapi or swagger, and inssert code snippet",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-viewer-explorer",
          "title": "Api Viewer Explorer",
          "icon": "resources/tags.svg"
        }
      ]
    },
    "views": {
      "api-viewer-explorer": [
        {
          "id": "api-viewer-list",
          "name": "Api List"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-api-viewer.insertTypeCode",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "vscode-api-viewer.update",
          "when": "view =~ /api-viewer/",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-api-viewer.insertTypeCode",
          "when": "viewItem == ApiNode",
          "group": "inline@1"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-api-viewer.update",
        "title": "Update Api List",
        "category": "Api Viewer",
        "icon": {
          "dark": "resources/refresh.svg",
          "light": "resources/refresh.svg"
        }
      },
      {
        "command": "vscode-api-viewer.insertTypeCode",
        "title": "Insert Types Code",
        "category": "Api Viewer",
        "icon": {
          "dark": "resources/refresh.svg",
          "light": "resources/refresh.svg"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Api Viewer",
      "properties": {
        "api-viewer.yapi.email": {
          "default": "",
          "type": "string",
          "markdownDescription": "登录用户名"
        },
        "api-viewer.yapi.password": {
          "default": "",
          "type": "string",
          "markdownDescription": "登录密码"
        },
        "api-viewer.yapi.url": {
          "default": "",
          "type": "string",
          "markdownDescription": "Yapi项目地址"
        },
        "api-viewer.yapi.pid": {
          "default": "",
          "type": "string",
          "markdownDescription": "Yapi项目ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.45.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.155",
    "@types/prettier": "^2.0.1",
    "dayjs": "^1.8.28",
    "got": "^11.3.0",
    "json-schema-to-typescript": "^9.1.0",
    "lodash": "^4.17.15",
    "prettier": "^2.0.5"
  }
}
